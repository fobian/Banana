<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppTheme">
        <!-- Customize your theme here. -->
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">

        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="background">@color/theme_primary</item>
        <item name="backgroundStacked">@drawable/actionbar_background</item>
        <item name="backgroundSplit">@drawable/actionbar_background</item>
    </style>

    <!-- action bar title text -->
    <style name="TitleTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- action bar tab text -->
    <style name="TabTextStyle"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- cardview header title text -->
    <style name="CardHeaderTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- cardview header subhead text -->
    <style name="CardHeaderSubStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- cardview header body text -->
    <style name="CardBodyStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
