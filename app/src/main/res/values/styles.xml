<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppTheme">

    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">

        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="background">@color/theme_primary</item>
    </style>

    <!-- action bar title text -->
    <style name="TitleTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- action bar tab text -->
    <style name="TabTextStyle"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- cardview header title text -->
    <style name="CardHeaderTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- cardview header subhead text -->
    <style name="CardHeaderSubStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- cardview header body text -->
    <style name="CardBodyStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Toolbar -->
    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">?actionBarIconColor</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>

    </style>

    <style name="TabIndicator" />

</resources>
