<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chijsh.banana.ui.ProfileActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:paddingTop="@dimen/header_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/avatar_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@color/background_floating_material_dark">

            <com.chijsh.banana.widget.BezelImageView
                android:id="@+id/profile_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/user_avatar_empty"
                app:maskDrawable="@drawable/circle_mask" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/profile_avatar">

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/profile_description"
                    android:lines="1"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_name"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

        </RelativeLayout>

        <com.chijsh.banana.widget.tab.SlidingTabLayout
            android:id="@+id/profile_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/black_transparent" />


    </FrameLayout>
    <LinearLayout
        android:id="@+id/headerbar"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_actionbar"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            >
            <LinearLayout
                android:id="@+id/avatar_name"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <com.chijsh.banana.widget.BezelImageView
                    android:id="@+id/my_avatar"
                    style="?android:actionButtonStyle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    app:maskDrawable="@drawable/circle_mask"/>
                <TextView
                    android:id="@+id/my_name"
                    android:textAppearance="@style/TitleTextStyle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </LinearLayout>

</FrameLayout>
