<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/main_top_margin"
    android:paddingLeft="@dimen/card_screen_padding"
    android:paddingRight="@dimen/card_screen_padding"
    android:background="@android:color/darker_gray"
    tools:context=".HomeTimeLineFragment">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/time_line"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>
    <com.chijsh.banana.widget.satellitemenu.SatelliteMenu
        android:id="@+id/sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        sat:satelliteDistance="120dp"
        sat:totalSpacingDegree="90"
        sat:closeOnClick="true"
        sat:expandDuration="700"/>

</RelativeLayout>
