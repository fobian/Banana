<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.chijsh.banana.ui.PostDialogActivity">

    <RelativeLayout
        android:id="@+id/post_header_layout"
        android:layout_width="match_parent"
        android:padding="@dimen/card_content_padding"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/my_avatar"
            android:layout_width="@dimen/post_dialog_avatar_size"
            android:layout_height="@dimen/post_dialog_avatar_size"
            android:layout_centerVertical="true"
            android:src="@drawable/user_avatar_empty" />
        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/my_avatar"
            android:text="sssssss"
            android:textSize="25sp"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/post_edit"
        android:layout_below="@id/post_header_layout"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <RelativeLayout
        android:layout_below="@id/post_edit"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/post_dialog_footer_margin"
        android:paddingRight="@dimen/post_dialog_footer_margin"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/post_camera"
            android:src="@drawable/ic_camera_alt_grey600_24dp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/post_at"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/post_dialog_footer_margin"
            android:src="@drawable/ic_chat_grey600_24dp"
            android:layout_toRightOf="@id/post_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/post_topic"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/post_dialog_footer_margin"
            android:src="@drawable/ic_chat_grey600_24dp"
            android:layout_toRightOf="@id/post_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/post_emotion"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/post_dialog_footer_margin"
            android:layout_toRightOf="@id/post_topic"
            android:src="@drawable/ic_mood_grey600_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/post_send"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_send_grey600_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
