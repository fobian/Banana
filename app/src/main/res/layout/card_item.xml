<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:contentPadding="@dimen/card_content_padding"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.chijsh.banana.widget.BezelImageView
                android:id="@+id/user_avatar"
                android:src="@drawable/user_avatar_empty"
                android:layout_width="@dimen/user_avatar_size"
                android:layout_height="@dimen/user_avatar_size"
                android:scaleType="centerCrop"
                app:maskDrawable="@drawable/circle_mask"/>

            <LinearLayout
                android:layout_toRightOf="@id/user_avatar"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_name"
                    android:textAppearance="@style/CardHeaderTitleStyle"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_subhead"
                    android:textAppearance="@style/CardHeaderSubStyle"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/user_text_layout"
            android:paddingTop="16dp"
            android:layout_below="@id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.chijsh.banana.widget.LinkEnabledTextView
                android:id="@+id/user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/text_line_spacing"
                android:textAppearance="@style/CardBodyStyle"
                />
            <ImageView
                android:id="@+id/thumbnail_pic"
                android:layout_below="@id/user_text"
                android:scaleType="fitCenter"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:visibility="gone"/>
            <GridLayout
                android:id="@+id/pic_grid"
                android:visibility="gone"
                android:orientation="horizontal"
                android:columnCount="3"
                android:layout_below="@id/user_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>
                <ImageView
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>
                <ImageView
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>
                <ImageView
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>
                <ImageView
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>
                <ImageView
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>
                <ImageView
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>
                <ImageView
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>
                <ImageView
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>
            </GridLayout>
            <RelativeLayout
                android:id="@+id/retwitt_layout"
                android:layout_below="@id/thumbnail_pic"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@color/retwitted_background"
                android:layout_height="wrap_content">
                <com.chijsh.banana.widget.LinkEnabledTextView
                    android:id="@+id/retwitt_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/text_line_spacing"
                    android:textAppearance="@style/CardBodyStyle"
                    />
                <ImageView
                    android:id="@+id/retwitt_thumbnail_pic"
                    android:layout_below="@id/retwitt_content"
                    android:scaleType="fitCenter"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:visibility="gone"/>
                <GridLayout
                    android:id="@+id/retwitt_pic_grid"
                    android:visibility="gone"
                    android:columnCount="3"
                    android:layout_below="@id/retwitt_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_margin="2dp"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>
                    <ImageView
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>
                    <ImageView
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>
                    <ImageView
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>
                    <ImageView
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>
                    <ImageView
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>
                    <ImageView
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>
                    <ImageView
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>
                    <ImageView
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>
                </GridLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:paddingTop="20dp"
            android:layout_below="@id/user_text_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_thumb_up_grey600_24dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/ic_comment_grey600_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:src="@drawable/ic_launch_grey600_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>