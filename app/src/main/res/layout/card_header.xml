<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.chijsh.banana.presentation.widget.BezelImageView
        style="?android:actionButtonStyle"
        android:id="@+id/user_avatar"
        android:src="@drawable/user_avatar_empty"
        android:layout_width="@dimen/user_avatar_size"
        android:layout_height="@dimen/user_avatar_size"
        android:scaleType="centerCrop"
        app:maskDrawable="@drawable/circle_mask"/>

    <LinearLayout
        android:layout_toRightOf="@id/user_avatar"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            android:textAppearance="@style/CardHeaderTitleStyle"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_subhead"
            android:textAppearance="@style/CardHeaderSubStyle"
            />
    </LinearLayout>
</RelativeLayout>